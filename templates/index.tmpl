<!DOCTYPE html>

<html>
    <head>
        <link href="{{.CSSFile}}" rel="stylesheet" type="text/css">
        <meta charset="UTF-8">
    </head>
 
    <body>
        <div class="search">
            <form action="/companys" method="GET">
            <input type="text" name="query" placeholder="Искать здесь..." value="{{.query}}">
            <button type="submit"></button>
            </form>
        </div>
        <div class="container">
            {{if len .card}}
            {{range .card}}
                {{template "product" .}}
            {{end}}
            {{else}}
                <p>По данному запросу ничего не найдено. :(</p>
            {{end}} 
        </div>
    </body>
</html>